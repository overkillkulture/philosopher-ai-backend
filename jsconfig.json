{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "checkJs": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@config": ["config"],
      "@config/*": ["config/*"],
      "@types": ["types"],
      "@types/*": ["types/*"],
      "@middleware/*": ["middleware/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": [
    "**/*.js",
    "types/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "ARCHIVE",
    "DORMANT_SYSTEMS",
    "100X_BACKUP"
  ]
}
